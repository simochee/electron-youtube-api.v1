#player
    align-items center
    display flex
    height 100%
    justify-content center
    width 100%
    iframe
        width 100%
        height 100%

player-controller
    height 100%
    left 0
    position absolute
    top 0
    transition opacity .3s ease
    width 100%
    z-index 1
    &[data-hide]
        opacity 0
    .player-controller
        box-sizing border-box
        background rgba(#000, .6)
        bottom 0
        left 0
        no-drag()
        padding 15px 20px
        position absolute
        width 100%
        .controller-top
            align-items center
            display flex
            .player-time
                color rgba(#fff, .8)
                font-size 12px
            .progress-bar
                h = 5px
                background rgba(#fff, .2)
                flex 1
                height h
                margin 0 12px
                position relative
                .seek-bar,
                .position-bar
                    height h
                    left 0
                    position absolute
                    top 0
                .seek-bar
                    background rgba(#fff, .4)
                .position-bar
                    background $theme
        .controller-button
            height 32px
            margin-top 12px
            position relative
            width 100%
            .left
                left 0
                position absolute
                top 0
            .center
                display table
                margin 0 auto
            .right
                position absolute
                right 0
                top 0
            .button-icon
                color rgba(#fff, .8)
                cursor pointer
                font-size 16px
                height 24px
                line-height 24px
                margin 4px 2px
                width 24px
                &:hover
                    color #fff
                &.active
                    opacity .8
                    color $theme
                    text-shadow 0 0 2px $theme
            .button-large
                font-size 24px
                height 32px
                line-height 32px
                margin 0 8px
                width 32px